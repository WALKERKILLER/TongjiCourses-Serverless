{
  "name": "jcourse-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "vite --host 127.0.0.1 --port 5173",
    "dev:lan": "vite --host 0.0.0.0 --port 5173",
    "dev:with-sim": "npm run build:scheduler && vite",
    "build:scheduler": "npm --prefix ../scheduler run build",
    "build:wlc": "node ./scripts/build-wlc.mjs",
    "build": "npm run build:wlc && npm run build:scheduler && tsc && vite build",
    "preview": "vite preview",
    "deploy": "wrangler pages deploy dist --project-name jcourse-web"
  },
  "dependencies": {
    "framer-motion": "^12.25.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "react-turnstile": "^1.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}
